<h1>Welcome to orders index</h1>

<hr>
<h3><%= @orders.count %> orders in database</h3>
<hr>
<h5>Revenue : <%= @revenue %> €</h5>
<h5>Average revenue per order : <%= @avg_per_order %></h5>
<h5>Number of customers : <%= @customers %></h5>
<hr>

<ul>
  <% @orders.each do |order| %>
    <li><%= order.date %> | <%= order.country %> | <%= order.product_description[0..30] %>.. | <%= order.quantity %> pieces | <%= order.unit_price %> €</li>
  <% end %>
</ul>
